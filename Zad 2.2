#include <iostream>
using namespace std;

int main() {
    int a, b;

    cout << "Podaj liczbe a: ";
    cin >> a;
    cout << "Podaj liczbe b: ";
    cin >> b;
    cout << "Liczby podane przez uÅ¼ytkownika: a = " << a << ", b = " << b << endl;

    cout << "\nWiersz gwiazdek o dlugosci a:" << endl;
    for (int i = 0; i < a; i++) {
        cout << "*";
    }
    cout << endl;

    cout << "\nKolumna gwiazdek o dlugosci b:" << endl;
    for (int i = 0; i < b; i++) {
        cout << "*" << endl;
    }

    cout << "\nWypelniony prostokat o wymiarach a x b:" << endl;
    for (int i = 0; i < b; i++) {
        for (int j = 0; j < a; j++) {
            cout << "*";
        }
        cout << endl;
    }

    cout << "\nObramowanie prostokata o wymiarach a x b:" << endl;
    for (int i = 0; i < b; i++) {
        for (int j = 0; j < a; j++) {
            if (i == 0 || i == b - 1 || j == 0 || j == a - 1) {
                cout << "*";
            }
            else {
                cout << " ";
            }
        }
        cout << endl;
    }

    cout << "\nTrojkat prostokatny (kat prosty w lewym dolnym rogu):" << endl;
    for (int i = 1; i <= a; i++) {
        for (int j = 0; j < i; j++) {
            cout << "*";
        }
        cout << endl;
    }

    cout << "\nTrojkat prostokatny (kat prosty w prawym gornym rogu):" << endl;
    for (int i = 0; i < a; i++) {
        for (int j = 0; j < a; j++) {
            if (j >= i) {
                cout << "*";
            }
            else {
                cout << " ";
            }
        }
        cout << endl;
    }

    return 0;
}
